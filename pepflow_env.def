BootStrap: docker
From: nvidia/cuda:11.8.0-devel-ubuntu22.04
#From: ubuntu:22.04

%files 
    pepflow_env.yml /opt/pepflow_env.yml

%post
    apt-get update
    apt-get install -y sudo wget vim git gcc g++ 
    echo y 79 | apt-get install cmake unzip

%post
    mkdir -p /opt/miniconda3
    wget https://repo.anaconda.com/miniconda/Miniconda3-latest-Linux-x86_64.sh -O /opt/miniconda3/miniconda.sh
    bash /opt/miniconda3/miniconda.sh -b -u -p /opt/miniconda3
    rm -rf /opt/miniconda3/miniconda.sh

    # >>> conda initialize >>>
    # !! Contents within this block are managed by 'conda init' !!
    __conda_setup="$('/opt/miniconda3/bin/conda' 'shell.bash' 'hook' 2> /dev/null)"
    if [ $? -eq 0 ]; then
        eval "$__conda_setup"
    else
        if [ -f "/opt/miniconda3/etc/profile.d/conda.sh" ]; then
            .   "/opt/miniconda3/etc/profile.d/conda.sh"
        else
            export PATH="/opt/miniconda3/bin:$PATH"
        fi
    fi
    unset __conda_setup
    # <<< conda initialize <<<

    cd /opt
    conda env create -f pepflow_env.yml
    
    conda activate pepflow_env
    pip install torch-scatter -f https://data.pyg.org/whl/torch-1.13.1+cu117.html
    pip install ml-collections==0.1.1
    
%environment
    # >>> conda initialize >>>
    # !! Contents within this block are managed by 'conda init' !!
    __conda_setup="$('/opt/miniconda3/bin/conda' 'shell.bash' 'hook' 2> /dev/null)"
    if [ $? -eq 0 ]; then
        eval "$__conda_setup"
    else
        if [ -f "/opt/miniconda3/etc/profile.d/conda.sh" ]; then
            .   "/opt/miniconda3/etc/profile.d/conda.sh"
        else
            export PATH="/opt/miniconda3/bin:$PATH"
        fi
    fi
    unset __conda_setup
    # <<< conda initialize <<<

    conda activate pepflow_env

%runscript
    conda -V

%labels
    Maintainer Shinji Iida
    Description This container provides pepflow environment
